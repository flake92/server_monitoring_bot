# Настройки Telegram бота
BOT_TOKEN=your_bot_token_here  # Токен бота, полученный от @BotFather
ADMIN_IDS=123456789,987654321  # ID администраторов бота через запятую

# Настройки базы данных PostgreSQL
DB_HOST=localhost              # Хост базы данных
DB_PORT=5432                  # Порт базы данных
DB_NAME=server_monitoring     # Имя базы данных
DB_USER=monitor_user         # Пользователь базы данных
DB_PASSWORD=your_password    # Пароль для доступа к базе данных
DB_POOL_MIN_SIZE=1          # Минимальный размер пула соединений
DB_POOL_MAX_SIZE=10         # Максимальный размер пула соединений

# Настройки мониторинга
MONITORING_INTERVAL=60       # Интервал проверки в секундах
COOLDOWN_PERIOD=20          # Период задержки между уведомлениями в секундах
HTTP_TIMEOUT=5              # Таймаут HTTP запросов в секундах
TCP_TIMEOUT=2.0            # Таймаут TCP соединения в секундах
MAX_RETRIES=3              # Максимальное количество попыток повтора
RETRY_DELAY=1.0           # Задержка между попытками в секундах
DNS_CACHE_TTL=300         # Время жизни DNS кэша в секундах
CONNECTION_POOL_SIZE=100   # Размер пула HTTP соединений

# Настройки логирования
LOG_LEVEL=INFO             # Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_DIR=/var/log/server_monitoring_bot  # Директория для файлов логов
LOG_MAX_SIZE=10485760      # Максимальный размер файла лога (10MB)
LOG_BACKUP_COUNT=5         # Количество файлов ротации логов
